<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg2"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/menuicon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:background="?attr/selectableItemBackground"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/menu" />

    <!-- Add TextView to display the date -->
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/arial"
        android:text="Welcome"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/ccctext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/welcome"
        android:text="Cainta Catholic College"
        android:textSize="25dp"
        android:fontFamily="@font/arial"
        android:textColor="@color/yellow"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/studenttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/arial"
        android:text="Students!"
        android:layout_below="@+id/ccctext"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/studenttext"
        android:layout_marginLeft="120dp"
        android:src="@drawable/clockwhite" />

    <DigitalClock
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studenttext"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/arial"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="25dp" />



    <!-- Add CalendarView to display the Calendar -->
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="320dp"
        android:layout_marginTop="220dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext_round"
        android:alpha="0.5">

        <CalendarView
            android:id="@+id/calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </CalendarView>


</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="540dp">

        <ImageButton
            android:id="@+id/preenroll"
            android:layout_width="145dp"
            android:layout_height="125dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:background="?attr/selectableItemBackground"
            android:scaleType="fitXY"
            android:src="@drawable/preenroll_btn" />

        <ImageButton
            android:id="@+id/evaluate"
            android:layout_width="145dp"
            android:layout_height="125dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="20dp"
            android:background="?attr/selectableItemBackground"
            android:scaleType="fitXY"
            android:src="@drawable/evaluate_btn" />

    </RelativeLayout>

</RelativeLayout>