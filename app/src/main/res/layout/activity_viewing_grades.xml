        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="1dp"
        android:text="2nd year"
        android:textSize="13dp"
        android:layout_toRightOf="@+id/firstyear"
