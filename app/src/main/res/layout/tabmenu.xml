<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rec8"
    tools:context=".tabmenu">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/stname"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="145dp"
        android:text="@+id/stname"
        android:fontFamily="@font/arial"
        android:hint="STUDENT NAME"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/stnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="210dp"
        android:hint="STUDENT NUMBER"
        android:textColorHint="@color/white"
        android:text="@+id/stnumber"
        android:fontFamily="@font/arial"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:background="@color/bluegrey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:drawableLeft="@drawable/homeicon"
        android:fontFamily="@font/arial"
        android:text="  Home"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="@color/bluegrey"
        android:layout_marginTop="370dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/studentprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/usermini"
        android:fontFamily="@font/arial"
        android:text="  Profile"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="@color/bluegrey"
        android:layout_marginTop="460dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/infoicon"
        android:fontFamily="@font/arial"
        android:text="  About"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30dp" />


    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="@color/bluegrey"
        android:layout_marginTop="550dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="570dp"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/logout"
        android:fontFamily="@font/arial"
        android:scaleType="fitXY"
        android:text="  Log Out"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30dp" />









</RelativeLayout>