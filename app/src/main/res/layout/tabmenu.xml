<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".tabmenu">


    <View
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/blue" />
    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/user"
        />

    <TextView
        android:id="@+id/fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/profilepic"
        android:fontFamily="@font/arial"
        android:hint="Student Name"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/studentnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullname"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/profilepic"
        android:fontFamily="@font/arial"
        android:hint="student number"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/studentnumber"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/profilepic"
        android:fontFamily="@font/arial"
        android:hint="course"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="14dp" />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_baseline_home_24"
        android:fontFamily="@font/arial"
        android:padding="22dp"
        android:scaleType="fitXY"
        android:text="  Home"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="22dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/home"
        android:background="@color/bluegrey" />

    <Button
        android:id="@+id/studentprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:layout_centerHorizontal="true"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/person"
        android:fontFamily="@font/arial"
        android:padding="22sp"
        android:text="  Profile"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="22dp" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/studentprofile"
        android:layout_centerHorizontal="true"
        android:background="@color/bluegrey" />

    <Button
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view3"
        android:layout_centerHorizontal="true"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/about"
        android:fontFamily="@font/arial"
        android:padding="22dp"
        android:text="  About"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="22dp" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/about"
        android:layout_centerHorizontal="true"
        android:background="@color/bluegrey" />

    <Button
        android:id="@+id/contact_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view4"
        android:layout_centerHorizontal="true"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_baseline_local_phone_24"
        android:fontFamily="@font/arial"
        android:padding="22dp"
        android:text="  Contact us"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="22dp" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/contact_us"
        android:layout_centerHorizontal="true"
        android:background="@color/bluegrey" />

    <Button
        android:id="@+id/log_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view5"
        android:layout_centerHorizontal="true"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/out"
        android:fontFamily="@font/arial"
        android:padding="22dp"
        android:text="  Sign out"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:paddingLeft="20dp"
        android:text="How to use PEGVA?"
        android:textSize="15dp" />
    <View
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/blue"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>




</RelativeLayout>