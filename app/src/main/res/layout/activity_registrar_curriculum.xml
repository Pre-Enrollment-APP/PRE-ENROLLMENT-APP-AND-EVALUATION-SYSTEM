<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".registrar_curriculum">

    <ImageButton
        android:id="@+id/menuicon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:background="?attr/selectableItemBackground"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/menu" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/ccc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:fontFamily="@font/arial"
        android:text="Curriculum"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/stbscs"
        android:layout_width="155dp"
        android:layout_height="115dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="225dp"
        android:background="?attr/selectableItemBackground"
        android:scaleType="fitXY"
        android:src="@drawable/bscs" />

    <ImageButton
        android:id="@+id/stbsoa"
        android:layout_width="155dp"
        android:layout_height="115dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="225dp"
        android:background="?attr/selectableItemBackground"
        android:scaleType="fitXY"
        android:src="@drawable/bsoa" />

    <ImageButton
        android:id="@+id/ABREED"
        android:layout_width="155dp"
        android:layout_height="115dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="355dp"
        android:background="?attr/selectableItemBackground"
        android:scaleType="fitXY"
        android:src="@drawable/abreed" />

    <ImageButton
        android:id="@+id/stbeed"
        android:layout_width="155dp"
        android:layout_height="115dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="355dp"
        android:background="?attr/selectableItemBackground"
        android:scaleType="fitXY"
        android:src="@drawable/beed" />

    <ImageButton
        android:id="@+id/stbsed"
        android:layout_width="155dp"
        android:layout_height="115dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="485dp"
        android:background="?attr/selectableItemBackground"
        android:scaleType="fitXY"
        android:src="@drawable/bsed" />

    <ImageButton
        android:id="@+id/stbsba"
        android:layout_width="155dp"
        android:layout_height="115dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="485dp"
        android:background="?attr/selectableItemBackground"
        android:scaleType="fitXY"
        android:src="@drawable/bsba"
        />

</RelativeLayout>