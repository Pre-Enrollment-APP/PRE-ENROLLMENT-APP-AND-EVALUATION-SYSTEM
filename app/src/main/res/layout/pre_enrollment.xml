            </TableRow>
            <TableRow>

                <EditText
                    android:id="@+id/SC5"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:hint="None"
                    android:textSize="10dp"
                    android:cursorVisible="false"
