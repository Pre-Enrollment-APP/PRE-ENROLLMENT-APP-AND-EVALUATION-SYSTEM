<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/menuicon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:background="?attr/selectableItemBackground"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/menu" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:paddingLeft="30dp"
        android:paddingTop="13dp">

        <ImageView
            android:id="@+id/ccc"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/ccc" />

        <TextView
            android:id="@+id/cdis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ccc"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="COLLEGE DEPARTMENT \n INFORMATION SHEET"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cdis"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="Please fill out the form"
            android:textSize="10dp" />

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:background="@drawable/bg_round_border"
            android:paddingLeft="20dp"
            android:paddingTop="5dp">

            <RadioButton
                android:id="@+id/radio_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/arial"
                android:text="1st Year" />
            <!--android:onClick="onRadioButtonClicked"-->

            <RadioButton
                android:id="@+id/radio_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio_new"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/arial"
                android:text="2nd Year" />

            <RadioButton
                android:id="@+id/radio_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_toRightOf="@+id/radio_new"
                android:fontFamily="@font/arial"
                android:text="3rd Year" />

            <RadioButton
                android:id="@+id/radio_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/radio_cross"
                android:layout_marginStart="136dp"
                android:fontFamily="@font/arial"
                android:text="4th Year" />

        </RelativeLayout>


        <TextView
            android:id="@+id/fullnametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="270dp"
            android:fontFamily="@font/arial"
            android:text="Full Name"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/fullname"
            android:layout_width="218dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="270dp"
            android:layout_toRightOf="@+id/fullnametext"
            android:background="@drawable/editext_miniround"
            android:hint="Juan Dela Cruz"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/coursetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fullname"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/arial"
            android:text="Course"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/course"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_below="@+id/fullname"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/coursetext"
            android:background="@drawable/editext_miniround"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/majortext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fullname"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/course"
            android:fontFamily="@font/arial"
            android:text="Major"
            android:textColor="@color/black"
            android:textSize="15dp" />
        android:textSize="15dp" />

        <Spinner
            android:id="@+id/major"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_below="@+id/fullname"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/majortext"
            android:background="@drawable/editext_miniround"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/semestertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/coursetext"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/arial"
            android:text="Semester"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/semester"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_below="@+id/course"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/semestertext"
            android:background="@drawable/editext_miniround"
            android:paddingLeft="5dp" />


        <TextView
            android:id="@+id/sectiontext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/majortext"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/course"
            android:fontFamily="@font/arial"
            android:text="Section"
            android:textColor="@color/black"
            android:textSize="15dp" />


        <Spinner
            android:id="@+id/section"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_below="@+id/major"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/sectiontext"
            android:background="@drawable/editext_miniround"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/moptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/semestertext"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/arial"
            android:text="Mode of Payment"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/mop"
            android:layout_width="145dp"
            android:layout_height="25dp"
            android:layout_below="@+id/semester"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/moptext"
            android:background="@drawable/editext_miniround"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/dptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/moptext"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/arial"
            android:text="Downpayment"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/downpayment"
            android:layout_width="145dp"
            android:layout_height="25dp"
            android:layout_below="@+id/mop"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/dptext"
            android:background="@drawable/editext_miniround"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/SC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dptext"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/arial"
            android:text="SUBJECT CODE"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/Des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dptext"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/SC"
            android:fontFamily="@font/arial"
            android:text="DESCRIPTION"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/downpayment"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/Des"
            android:fontFamily="@font/arial"
            android:text="UNITS"
            android:textColor="@color/black"
            android:textSize="13dp" />


        <EditText
            android:id="@+id/SC1"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@+id/SC"
            android:layout_marginTop="7dp" />

        <EditText
            android:id="@+id/SC2"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/SC1"
            android:layout_marginTop="7dp" />

        <EditText
            android:id="@+id/SC3"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@+id/SC2"
            android:layout_marginTop="5dp" />

        <Spinner
            android:id="@+id/Des1"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Des"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/SC1"
            android:background="@drawable/editext_miniround" />

        <Spinner
            android:id="@+id/Des2"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Des1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/SC2"
            android:background="@drawable/editext_miniround" />

        <Spinner
            android:id="@+id/Des3"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Des2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/SC2"
            android:background="@drawable/editext_miniround" />

        <EditText
            android:id="@+id/units1"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_below="@+id/units"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/Des1" />

        <EditText
            android:id="@+id/units2"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_below="@+id/units1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/Des1" />

        <EditText
            android:id="@+id/units3"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_below="@+id/units2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/Des1" />


        <Button
            android:id="@+id/nextpage"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/Des3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_round"
            android:backgroundTint="@color/blue"
            android:ems="4"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp" />


    </RelativeLayout>
</RelativeLayout>