<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/menu" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:paddingLeft="30dp">

        <ImageView
            android:id="@+id/ccc"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/ccc" />

        <TextView
            android:id="@+id/cdis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ccc"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="COLLEGE DEPARTMENT \n INFORMATION SHEET"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cdis"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="Please fill out the form"
            android:textSize="10dp" />

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:background="@drawable/bg_round_border"
            android:paddingLeft="20dp"
            android:paddingTop="5dp">

            <RadioButton
                android:id="@+id/radio_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/arial"
                android:text="1st Year" />
            <!--android:onClick="onRadioButtonClicked"-->

            <RadioButton
                android:id="@+id/radio_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio_new"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/arial"
                android:text="2nd Year" />

            <RadioButton
                android:id="@+id/radio_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_toRightOf="@+id/radio_new"
                android:fontFamily="@font/arial"
                android:text="3rd Year" />

            <RadioButton
                android:id="@+id/radio_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/radio_cross"
                android:layout_marginStart="136dp"
                android:fontFamily="@font/arial"
                android:text="4th Year" />

        </RelativeLayout>


        <TextView
            android:id="@+id/last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="248dp"
            android:fontFamily="@font/arial"
            android:text="Last School Attended"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/LastSchoolAttended"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="248dp"
            android:layout_toRightOf="@+id/last"
            android:background="@drawable/editext_miniround"
            android:hint="SY: 2021 -2022"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/MOP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/arial"
            android:text="Mode of Payment"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/modeofpayment"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_below="@+id/LastSchoolAttended"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/last"
            android:background="@drawable/editext_miniround"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/SC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MOP"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/arial"
            android:text="SUBJECT CODE"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/Des"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MOP"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/SC"
            android:fontFamily="@font/arial"
            android:text="DESCRIPTION"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MOP"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/Des"
            android:fontFamily="@font/arial"
            android:text="UNITS"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/SC1"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/SC"
            android:layout_marginTop="5dp" />

        <EditText
            android:id="@+id/SC2"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/SC1"
            android:layout_marginTop="5dp" />

        <EditText
            android:id="@+id/SC3"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/SC2"
            android:layout_marginTop="5dp" />

        <EditText
            android:id="@+id/SC4"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/SC3"
            android:layout_marginTop="5dp" />

        <EditText
            android:id="@+id/SC5"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/SC4"
            android:layout_marginTop="5dp" />

        <EditText
            android:id="@+id/SC6"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/SC5"
            android:layout_marginTop="5dp" />

        <EditText
            android:id="@+id/SC7"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/SC6"
            android:layout_marginTop="5dp" />

        <EditText
            android:id="@+id/SC8"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/SC7"
            android:layout_marginTop="5dp" />

        <EditText
            android:id="@+id/SC9"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/SC8"
            android:layout_marginTop="5dp" />

        <EditText
            android:id="@+id/SC10"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_below="@+id/SC9"
            android:layout_marginTop="5dp" />

        <Spinner
            android:id="@+id/Des1"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_below="@+id/Des"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/SC1"
            android:background="@drawable/editext_miniround" />

        <Spinner
            android:id="@+id/Des2"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_below="@+id/Des1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/SC2"
            android:background="@drawable/editext_miniround" />

        <Spinner
            android:id="@+id/Des3"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_below="@+id/Des2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/SC2"
            android:background="@drawable/editext_miniround" />

        <Spinner
            android:id="@+id/Des4"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_below="@+id/Des3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/SC2"
            android:background="@drawable/editext_miniround" />

        <Spinner
            android:id="@+id/Des5"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Des4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/SC2"
            android:background="@drawable/editext_miniround" />

        <Spinner
            android:id="@+id/Des6"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Des5"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/SC2"
            android:background="@drawable/editext_miniround" />

        <Spinner
            android:id="@+id/Des7"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Des6"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/SC2"
            android:background="@drawable/editext_miniround" />

        <Spinner
            android:id="@+id/Des8"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Des7"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/SC2"
            android:background="@drawable/editext_miniround" />

        <Spinner
            android:id="@+id/Des9"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Des8"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/SC2"
            android:background="@drawable/editext_miniround" />

        <Spinner
            android:id="@+id/Des10"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Des9"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/SC2"
            android:background="@drawable/editext_miniround" />

        <EditText
            android:id="@+id/units1"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@+id/units"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/Des1" />

        <EditText
            android:id="@+id/units2"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@+id/units1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/Des1" />

        <EditText
            android:id="@+id/units3"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@+id/units2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/Des1" />

        <EditText
            android:id="@+id/units4"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@+id/units3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/Des1" />

        <EditText
            android:id="@+id/units5"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@+id/units4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/Des1" />

        <EditText
            android:id="@+id/units6"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@+id/units5"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/Des1" />

        <EditText
            android:id="@+id/units7"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@+id/units6"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/Des1" />

        <EditText
            android:id="@+id/units8"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@+id/units7"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/Des1" />

        <EditText
            android:id="@+id/units9"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@+id/units8"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/Des1" />

        <EditText
            android:id="@+id/units10"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@+id/units9"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/Des1" />

    </RelativeLayout>
</RelativeLayout>