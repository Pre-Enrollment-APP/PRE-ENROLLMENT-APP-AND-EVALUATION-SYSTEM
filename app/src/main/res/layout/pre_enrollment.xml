<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingLeft="30dp"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ccc"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ccc" />

    <TextView
        android:id="@+id/cdis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ccc"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="COLLEGE DEPARTMENT \n INFORMATION SHEET" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cdis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="Please fill out the form"
        android:textSize="10dp" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:background="@drawable/bg_round_border"
        android:paddingLeft="20dp"
        android:paddingTop="10dp">

        <RadioButton
            android:id="@+id/radio_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/arial"
            android:text="1st Year" />
        <!--android:onClick="onRadioButtonClicked"-->


        <RadioButton
            android:id="@+id/radio_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radio_new"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/arial"
            android:text="2nd Year" />

        <RadioButton
            android:id="@+id/radio_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_toRightOf="@+id/radio_new"
            android:fontFamily="@font/arial"
            android:text="3rd Year" />

        <RadioButton
            android:id="@+id/radio_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio_cross"
            android:layout_marginStart="136dp"
            android:fontFamily="@font/arial"
            android:text="4th Year" />

    </RelativeLayout>

    <RadioButton
        android:id="@+id/malebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/arial"
        android:text="MALE"
        android:textSize="13dp" />


</RelativeLayout>