            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/edittext_semiround"
            android:backgroundTint="@color/blue"
            android:text="Ok"
            android:textColor="@color/white">

        </Button>
    </RelativeLayout>

