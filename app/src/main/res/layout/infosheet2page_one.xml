<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".infosheet2pageONE"
    android:orientation="vertical">


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/menu" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:paddingLeft="30dp">

        <ImageView
            android:id="@+id/ccc"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/ccc" />

        <TextView
            android:id="@+id/cdis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ccc"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="COLLEGE DEPARTMENT \n INFORMATION SHEET"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cdis"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="Please fill out the form"
            android:textSize="10dp" />

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:background="@drawable/bg_round_border"
            android:paddingLeft="20dp"
            android:paddingTop="5dp">

            <RadioButton
                android:id="@+id/radio_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/arial"
                android:text="1st Year" />
            <!--android:onClick="onRadioButtonClicked"-->

            <RadioButton
                android:id="@+id/radio_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio_new"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/arial"
                android:text="2nd Year" />

            <RadioButton
                android:id="@+id/radio_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_toRightOf="@+id/radio_new"
                android:fontFamily="@font/arial"
                android:text="3rd Year" />

            <RadioButton
                android:id="@+id/radio_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/radio_cross"
                android:layout_marginStart="136dp"
                android:fontFamily="@font/arial"
                android:text="4th Year" />

        </RelativeLayout>
    </RelativeLayout>

        <TextView
            android:id="@+id/fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="248dp"
            android:fontFamily="@font/arial"
            android:text="Fullname: "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/stname"
            android:layout_width="250dp"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="248dp"
            android:layout_toRightOf="@+id/fullname"
            android:background="@drawable/editext_miniround"
            android:hint="LAST NAME GIVEN NAME M.I"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="290dp"
            android:fontFamily="@font/arial"
            android:text="Course: "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/stcourse"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginTop="290dp"
            android:layout_toRightOf="@+id/course"
            android:background="@drawable/edittext_rectangle"
            android:spinnerMode="dropdown"
            android:tooltipText="COURSE" />

        <TextView
            android:id="@+id/mjr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="290dp"
            android:fontFamily="@font/arial"
            android:text="Major: "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/stmajor"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginTop="290dp"
            android:layout_toRightOf="@+id/mjr"
            android:background="@drawable/edittext_rectangle"
            android:spinnerMode="dropdown"
            android:tooltipText="MAJOR" />

        <TextView
            android:id="@+id/sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="340dp"
            android:fontFamily="@font/arial"
            android:text="Semester: "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/semester"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginTop="340dp"
            android:layout_toRightOf="@+id/sem"
            android:background="@drawable/edittext_rectangle"
            android:tooltipText="SEMESTER" />

        <TextView
            android:id="@+id/sect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="340dp"
            android:fontFamily="@font/arial"
            android:text="Section: "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/stsection"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginTop="340dp"
            android:layout_toRightOf="@+id/sect"
            android:background="@drawable/edittext_rectangle"
            android:spinnerMode="dropdown"
            android:tooltipText="SECTION" />

        <TextView
            android:id="@+id/mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="400dp"
            android:fontFamily="@font/arial"
            android:text="Mode of Payment: "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/stpymnt"
            android:layout_width="185dp"
            android:layout_height="25dp"
            android:layout_marginTop="400dp"
            android:layout_toRightOf="@+id/mode"
            android:background="@drawable/edittext_rectangle"
            android:spinnerMode="dropdown"
            android:tooltipText="COURSE" />

        <TextView
            android:id="@+id/dpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="450dp"
            android:fontFamily="@font/arial"
            android:text="Down Payment: "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/stdwpayment"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginTop="450dp"
            android:layout_toRightOf="@+id/dpay"
            android:background="@drawable/edittext_rectangle"
            android:spinnerMode="dropdown"
            android:tooltipText="COURSE" />

        <TextView
            android:id="@+id/subcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="490dp"
            android:fontFamily="@font/arial"
            android:text="Subject Code"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/descript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="490dp"
            android:fontFamily="@font/arial"
            android:text="Description"
            android:layout_toRightOf="@+id/subcode"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="490dp"
            android:fontFamily="@font/arial"
            android:text="Unit"
            android:layout_toRightOf="@+id/descript"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/stcode"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="520dp"
            android:fontFamily="@font/arial"
            android:textColor="@color/black"
            android:textSize="15dp" />


        <!-- button -->

        <Button
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="745dp"
            android:background="@drawable/edittext_round"
            android:ems="7"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:text="SUBMIT"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="20dp" />


</RelativeLayout>