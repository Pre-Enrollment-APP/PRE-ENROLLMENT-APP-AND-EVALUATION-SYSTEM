<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".infosheet_confirmation_page">


    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/boxywhite"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your application is submitted"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="Proceed to the cashier for the payment"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:layout_below="@id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="Thank you!"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:layout_below="@id/text2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:text="Download Registration Form"
        android:textColor="@color/blue"
        android:clickable="true"
        android:textSize="20dp" />


</RelativeLayout>