    <ImageButton
        android:id="@+id/menuicon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:background="?attr/selectableItemBackground"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/menu" />

    <ImageView
        android:id="@+id/ccc"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:src="@drawable/ccc" />

    <TextView
        android:id="@+id/cccname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ccc"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="CAINTA CATHOLIC COLLEGE"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/cccadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cccname"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="A. BONIFACIO AVENUE, POBLACION, CAINTA RIZAL, PHILIPPINES"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <Spinner
        android:id="@+id/course_spinner"
        android:layout_width="85dp"
        android:layout_height="25dp"
        android:layout_below="@+id/cccadd"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/editext_miniround"
        android:spinnerMode="dropdown"
        android:tooltipText="YEARLEVEL" />

    <TextView
        android:id="@+id/coursetext"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_spinner"
        android:layout_marginLeft="32dp"
        android:fontFamily="@font/arial"
        android:lineSpacingExtra="5dp"
        android:text="Course"
        android:textColor="@color/black" />

    <Spinner
        android:id="@+id/styrlevel"
        android:layout_width="85dp"
        android:layout_height="25dp"
        android:layout_below="@+id/cccadd"
        android:layout_marginLeft="282dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/editext_miniround"
        android:spinnerMode="dropdown"
        android:tooltipText="YEARLEVEL" />

    <TextView
