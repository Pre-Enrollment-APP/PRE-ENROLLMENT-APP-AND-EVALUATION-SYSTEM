<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bglight"
    tools:context=".HowToReset"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout"
    >
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"></com.google.android.material.navigation.NavigationView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu"
            android:background="#00008577"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            />


        <TextView
            android:id="@+id/header_title"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Help"
            android:drawableStart="@drawable/help"
            android:fontFamily="@font/arial"
            android:textColor="@color/blue"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:textSize="17dp"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/superwhite"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Create an Account"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/text1"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:drawableEnd="@drawable/ic_baseline_arrow_right_alt_24"
                android:textColor="@color/darkyellow"/>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_below="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/superwhite"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Login"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/text2"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:drawableEnd="@drawable/ic_baseline_arrow_right_alt_24"
                android:textColor="@color/darkyellow"/>




        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/card2"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/superwhite"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Reset your Password"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/text4"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:drawableEnd="@drawable/ic_baseline_arrow_right_alt_24"
                android:textColor="@color/darkyellow"/>




        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card3"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/superwhite"
            app:cardCornerRadius="5dp"
            app:cardElevation="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step 1"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:textSize="13dp"
                android:id="@+id/view1"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Click Create an Account.\n2. Fill out the needed information required to accomplish your account.\n3. Tap Create.
"
                android:lineSpacingExtra="5dp"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:layout_marginTop="20dp"

                android:textSize="12dp"
                android:id="@+id/view2"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:textColor="@color/black"/>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/cv1"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/superwhite"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Pre-Enlist"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/text5"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:drawableEnd="@drawable/ic_baseline_arrow_right_alt_24"
                android:textColor="@color/darkyellow"/>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/card5"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/superwhite"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to View Grades"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/text6"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:drawableEnd="@drawable/ic_baseline_arrow_right_alt_24"
                android:textColor="@color/darkyellow"/>



        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>