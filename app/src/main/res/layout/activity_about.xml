<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:background="@drawable/bglight"
    tools:context=".About">
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu"
            android:background="#00008577"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            />
        <TextView
            android:id="@+id/header_title"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" About"
            android:fontFamily="@font/arial"
            android:textColor="@color/blue"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:textSize="17dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/superwhite"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial"
                android:padding="10dp"
                android:text="Pre-Registration and Grade Viewing"
                android:textAlignment="center"
                android:textColor="@color/darkyellow"
                android:textSize="15dp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="23dp"
            android:layout_marginStart="23dp"
            android:clickable="false"
            android:layout_below="@+id/card1"
            android:id="@+id/card2"
            android:layout_marginBottom="15dp"
            app:cardElevation="12dp"

            app:cardCornerRadius="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="This mobile application serves as a communication tool for the institution's students, professors, chairpersons, and registrars employee regarding pre-enlistment and grade viewing.

\n\nThe mobile application has two important functions:
\n(1) Pre-Registration
\nIt includes the subjects to be enrolled, units, and scheduled days and times.
\n(2) Grade Viewing
\nIt includes the grades in all subjects evey semester.
"
                android:lineSpacingExtra="10dp"
                android:fontFamily="@font/arial"
                android:textSize="13dp"/>
        </androidx.cardview.widget.CardView>

</RelativeLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>