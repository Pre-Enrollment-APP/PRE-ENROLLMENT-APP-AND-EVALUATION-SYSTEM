<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/profilesignup"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/createyouraccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilesignup"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:text="Create Your Account"
        android:textColor="@color/white"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/firstname"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/createyouraccount"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_semiround"
        android:drawablePadding="30dp"
        android:ems="10"
        android:hint="First Name:"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/firstname"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/edittext_semiround"
        android:drawablePadding="30dp"
        android:ems="10"
        android:hint="Last Name:"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/emailaddress"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/lastname"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/edittext_semiround"
        android:drawablePadding="30dp"
        android:ems="10"
        android:hint="Email Address:"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/number"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/emailaddress"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_semiround"
        android:drawablePadding="30dp"
        android:ems="10"
        android:hint="Mobile Number:"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/number"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/edittext_semiround"
        android:drawablePadding="30dp"
        android:ems="10"
        android:hint="Password:"
        android:paddingLeft="20dp" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_round"
        android:ems="5"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:text="Register"
        android:textAllCaps="false"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:text="Or Sig up with"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/google"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_below="@id/or"
        android:src="@drawable/google"
        android:layout_marginLeft="135dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_below="@id/or"
        android:src="@drawable/google"
        android:layout_marginLeft="135dp"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_below="@id/or"
        android:layout_marginLeft="210dp"
        android:src="@drawable/facebook" />
</RelativeLayout>