<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".registrarpage">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ccc"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:text="Registrar"
        android:textSize="30dp"
        android:fontFamily="@font/arial"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/stlist"
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="245dp"
        android:background="@drawable/edittext_round"
        android:drawablePadding="250dp"
        android:ems="7"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:src="@drawable/estudyante"
        android:text="Student List"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="20dp" />

    <Button
        android:id="@+id/curriculum"
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittext_round"
        android:drawableLeft="@drawable/student"
        android:layout_below="@+id/stlist"
        android:ems="7"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:text="Curriculum"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="20dp" />


</RelativeLayout>