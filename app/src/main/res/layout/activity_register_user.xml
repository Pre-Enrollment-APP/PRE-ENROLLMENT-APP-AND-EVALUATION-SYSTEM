<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".registerUser">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:background="?attr/selectableItemBackground"
        android:scaleType="fitXY"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:text="P.E.G.E.A"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/arial"
        android:text="Login to your account"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text"
        android:fadeScrollbars="false"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:scrollbarFadeDuration="0"
        android:scrollbars="vertical"
        android:layout_marginBottom="140dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/fullnametxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/arial"
                android:text="Fullname:"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/fullname"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/fullnametxt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/editext_miniround"
                android:drawableLeft="@drawable/icon_username"
                android:drawablePadding="30dp"
                android:ems="10"
                android:hint="" />

            <TextView
                android:id="@+id/emailtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fullname"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/arial"
                android:hint="Student ID"
                android:text="Email:"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/emailtext"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/editext_miniround"
                android:drawableLeft="@drawable/ic_lock" />

            <TextView
                android:id="@+id/passwordtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arial"
                android:hint="Student ID"
                android:text="Password"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/password"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/passwordtxt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/editext_miniround"
                android:drawableLeft="@drawable/ic_lock"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/studentnumbertxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arial"
                android:text="Student number:"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/studentnumber"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/studentnumbertxt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/editext_miniround"
                android:drawableLeft="@drawable/ic_lock"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/coursetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/studentnumber"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arial"
                android:text="Course"
                android:textColor="@color/white" />

            <Spinner
                android:id="@+id/course"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/coursetext"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/editext_miniround" />

            <TextView
                android:id="@+id/addresstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arial"
                android:text="Address:"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/address"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/addresstext"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/editext_miniround"
                android:drawableLeft="@drawable/ic_lock" />

            <TextView
                android:id="@+id/contactnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arial"
                android:text="Contact number:"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/fathername"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/contactnumber"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/editext_miniround"
                android:drawableLeft="@drawable/ic_lock" />

            <TextView
                android:id="@+id/mothernametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fathername"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arial"
                android:text="Mothers Name"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/mothername"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/mothernametext"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/editext_miniround"
                android:drawableLeft="@drawable/ic_lock" />

            <TextView
                android:id="@+id/datetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mothername"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arial"
                android:text="Birthday"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/date"
                style="?android:spinnerStyle"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/datetext"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/editext_miniround"
                android:fontFamily="@font/arial"
                android:onClick="opendatePicker"
                android:text=" JAN 01 2022"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/numbertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arial"
                android:text="Contact Number"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/number"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/numbertext"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/editext_miniround"
                android:drawableLeft="@drawable/ic_lock" />


        </RelativeLayout>
    </ScrollView>


    <Button
        android:id="@+id/registeruser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="620dp"
        android:background="@drawable/edittext_round"
        android:backgroundTint="@color/blue"
        android:ems="5"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:text="Create"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        tools:ignore="MissingConstraints"/>


</RelativeLayout>