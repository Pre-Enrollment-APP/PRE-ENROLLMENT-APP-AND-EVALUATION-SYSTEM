<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/menuicon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:background="?attr/selectableItemBackground"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/menu" />

    <ImageView
        android:id="@+id/ccc"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/ccc" />

    <TextView
        android:id="@+id/cdis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ccc"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="COLLEGE DEPARTMENT \n INFORMATION SHEET"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cdis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="Please fill out the form"
        android:textSize="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:paddingStart="20dp">

        <TextView
            android:id="@+id/SC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:fontFamily="@font/arial"
            android:text="SUBJECT CODE"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/Des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="95dp"
            android:layout_toRightOf="@+id/SC"
            android:fontFamily="@font/arial"
            android:text="DESCRIPTION"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="95dp"
            android:layout_toRightOf="@+id/Des"
            android:fontFamily="@font/arial"
            android:text="UNITS"
            android:textColor="@color/black"
            android:textSize="13dp" />


        <EditText
            android:id="@+id/SC4"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@id/SC"
            android:layout_marginTop="13dp" />

        <EditText
            android:id="@+id/SC5"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/SC4"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/SC6"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/SC5"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/SC7"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/SC6"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/SC8"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/SC7"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/SC9"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/SC8"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/SC10"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/SC9"
            android:layout_marginTop="15dp" />

        <Spinner
            android:id="@+id/Des4"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Des"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/SC4"
            android:background="@drawable/editext_miniround" />

        <Spinner
            android:id="@+id/Des5"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Des4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/SC4"
            android:background="@drawable/editext_miniround" />

        <Spinner
            android:id="@+id/Des6"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Des5"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/SC4"
            android:background="@drawable/editext_miniround" />

        <Spinner
            android:id="@+id/Des7"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Des6"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/SC4"
            android:background="@drawable/editext_miniround" />

        <Spinner
            android:id="@+id/Des8"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Des7"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/SC4"
            android:background="@drawable/editext_miniround" />

        <Spinner
            android:id="@+id/Des9"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Des8"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/SC4"
            android:background="@drawable/editext_miniround" />

        <Spinner
            android:id="@+id/Des10"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Des9"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/SC4"
            android:background="@drawable/editext_miniround" />


        <EditText
            android:id="@+id/units4"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_below="@+id/units"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/Des4" />

        <EditText
            android:id="@+id/units5"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_below="@+id/units4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/Des5" />

        <EditText
            android:id="@+id/units6"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_below="@+id/units5"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/Des6" />

        <EditText
            android:id="@+id/units7"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_below="@+id/units6"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/Des7" />

        <EditText
            android:id="@+id/units8"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_below="@+id/units7"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/Des8" />

        <EditText
            android:id="@+id/units9"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_below="@+id/units8"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/Des9" />

        <EditText
            android:id="@+id/units10"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_below="@+id/units9"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/Des10" />

        <EditText
            android:id="@+id/uploadreceipttext"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Des10"
            android:layout_marginStart="35dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/editext_miniround" />

        <Button
            android:id="@+id/uploadreceipt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/Des10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/uploadreceipttext"
            android:background="@drawable/edittext_round"
            android:ems="8"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:padding="0dp"
            android:text="Upload receipt"
            android:textAllCaps="false"
            android:backgroundTint="@color/blue"
            android:textSize="14dp" />


        <Button
            android:id="@+id/submitform"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/uploadreceipttext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_round"
            android:backgroundTint="@color/blue"
            android:ems="7"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:text="Ok"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp" />


    </RelativeLayout>
</RelativeLayout>