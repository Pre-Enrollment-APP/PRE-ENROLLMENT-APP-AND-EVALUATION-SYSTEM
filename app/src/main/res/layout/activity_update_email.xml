<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_gravity="center"
    android:paddingBottom="20dp"
    tools:context=".UpdateEmail">








    <TextView
        android:id="@+id/header"
        android:text="Update your Email"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/bluegrey"/>

    <TextView
        android:id="@+id/currentemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_round_border"
        android:backgroundTint="@color/superwhite"
        android:hint="Enter your current email"
        android:padding="7dp"
        android:paddingStart="20dp"
        android:textSize="15dp" />

    <EditText
        android:layout_below="@id/currentemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_round_border"
        android:backgroundTint="@color/superwhite"
        android:textSize="15dp"
        android:paddingStart="20dp"
        android:hint="Enter your password"
        android:padding="7dp"
        android:id="@+id/password"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/authentication"
        android:layout_below="@id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="23dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/bluegrey"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:text= "Authenticate"
        android:padding="7dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:id="@+id/texttoast"
        android:layout_below="@id/authentication"/>

    
    <EditText
        android:id="@+id/newemail"
        android:layout_below="@id/texttoast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_round_border"
        android:backgroundTint="@color/superwhite"
        android:textSize="15dp"
        android:paddingStart="20dp"
        android:hint="Enter your new email"
        android:padding="7dp"
        android:layout_marginTop="7dp"/>

    <Button
        android:id="@+id/updateemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newemail"
        android:layout_marginStart="30dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="23dp"
        android:backgroundTint="@color/blue"
        android:padding="7dp"
        android:text="Update Email"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="7dp"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>



</RelativeLayout>