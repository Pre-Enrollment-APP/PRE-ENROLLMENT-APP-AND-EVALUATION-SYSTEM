<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".registrar_student_list">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/menu" />

    <ImageView
        android:id="@+id/ccc"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:src="@drawable/ccc" />

    <TextView
        android:id="@+id/cccname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ccc"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="CAINTA CATHOLIC COLLEGE"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/cccadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cccname"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="A. BONIFACIO AVENUE, POBLACION, CAINTA RIZAL, PHILIPPINES"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/bluebox"
        android:layout_width="2000dp"
        android:layout_height="120dp"
        android:layout_below="@id/cccadd"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/boxy" />

    <TextView
        android:id="@+id/stnotext"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cccadd"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/arial"
        android:lineSpacingExtra="5dp"
        android:text="Student Number: "
        android:textColor="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/searchbar"
        android:layout_width="155dp"
        android:layout_height="48dp"
        android:layout_below="@+id/cccadd"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/stnotext"
        android:background="@drawable/edittext_rectangle"
        android:drawableRight="@drawable/searchimg"
        android:fontFamily="@font/arial"
        android:spinnerMode="dropdown"
        android:tooltipText="COURSE" />

    <TextView
        android:id="@+id/stlisttext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bluebox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="Student List"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/stnotext2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stlisttext2"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/arial"
        android:lineSpacingExtra="5dp"
        android:text="Student Number"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/stnametext"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stlisttext2"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/stnotext2"
        android:fontFamily="@font/arial"
        android:lineSpacingExtra="5dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="15dp" />

        <!-- student number -->
    <EditText
        android:id="@+id/stno1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stnotext2"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/arial"
        android:hint="20XX-XXXX"
        android:lineSpacingExtra="5dp"
        android:text="@+id/stnumber"
        android:textColor="@color/black"
        android:textSize="15dp" />

        <!-- student number end -->

        <!-- student name -->

    <EditText
        android:id="@+id/stname1"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stnametext"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/stno1"
        android:layout_toRightof="@+stno1"
        android:fontFamily="@font/arial"
        android:hint="full name"
        android:lineSpacingExtra="5dp"
        android:text="@+id/stname"
        android:textColor="@color/black"
        android:textSize="15dp" />

        <!-- student name end-->












</RelativeLayout>